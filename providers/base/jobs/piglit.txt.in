plugin: shell
id: piglit/fbo
requires:
 package.name == 'piglit'
command: piglit_test -t ^spec/EXT_framebuffer_object -n fbo
estimated_duration: 28.000
_description:
 Runs piglit tests for checking support for framebuffer object operations, depth buffer and stencil buffer

