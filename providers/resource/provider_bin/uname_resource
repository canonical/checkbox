import os
import sys


def get_uname():
    keys = ("name", "node", "release", "version", "machine")
    values = os.uname()
    return dict(list(zip(keys, values)))


def main():
    uname = get_uname()
    for key, value in uname.items():
        print("%s: %s" % (key, value))

    return 0


if __name__ == "__main__":
    sys.exit(main())
